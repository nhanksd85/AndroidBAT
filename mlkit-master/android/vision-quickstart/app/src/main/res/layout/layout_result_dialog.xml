<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id = "@+id/text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity = "center_horizontal"
        android:text = "BAT Score"
        android:textStyle = "bold"
        android:textSize = "25dp"
        android:textColor = "#E15F09">
    </TextView>
    <TextView
        android:id = "@+id/txtAnkle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity = "center_horizontal"
        android:textSize = "20dp"
        android:text = "Ankle Score: "
        android:textColor = "#E15F09">

    </TextView>
    <TextView
        android:id = "@+id/txtHip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity = "center_horizontal"
        android:textSize = "20dp"
        android:textColor = "#E15F09"
        android:text = "Pelvis Score: ">

    </TextView>
    <TextView
        android:id = "@+id/txtTrunk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity = "center_horizontal"
        android:textSize = "20dp"
        android:text = "Trunk Score: "
        android:textColor = "#E15F09">
    </TextView>

    <TextView
        android:id = "@+id/txtBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity = "center_horizontal"
        android:textSize = "20dp"
        android:textColor = "#E15F09"
        android:text = "Body Score: ">
    </TextView>
    <TextView
        android:id = "@+id/txtTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity = "center_horizontal"
        android:textSize = "25dp"
        android:textColor = "#E15F09"
        android:textStyle = "bold"
        android:text = "Body Score: ">
    </TextView>

    <Button
        android:id = "@+id/btnOK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "  OK  "
        android:layout_margin = "20dp"
        android:layout_gravity = "center"
        android:textStyle = "bold"
        android:textColor = "#E15F09">

    </Button>
</LinearLayout>